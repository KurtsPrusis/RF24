/** General Data Transfer Rate Test
 * This example demonstrates basic data transfer functionality with the 
 updated library. This example will display the transfer rates acheived using
 the slower form of high-speed transfer using blocking-writes.
 */

#include <SPI.h>
#include "RF24.h"
#include "printf.h"

/*************  USER Configuration *****************************/
                                          // Hardware configuration
RF24 radio(9,10);                        // Set up nRF24L01 radio on SPI bus plus pins 9 & 10

const int role_pin = A4;

// Pins on the remote for buttons
const uint8_t button_pins[] = { 3,4,5,6 };
const uint8_t num_button_pins = sizeof(button_pins);

// Pins on the LED board for LED's
const uint8_t led_pins[] = { 4,5,6,7 };
const uint8_t num_led_pins = sizeof(led_pins);

/***************************************************************/

const uint64_t pipes[2] = { 0xABCDABCD71LL, 0x544d52687CLL };   // Radio pipe addresses for the 2 nodes to communicate.

byte data[5];                           //Data buffer for testing data transfer speeds

unsigned long counter, rxTimer;          //Counter and timer for keeping track transfer info
unsigned long startTime, stopTime;  
bool Remote=1,Box=0,role=0;

void setup(void) {

  //
  // Role
  //

  // set up the role pin
  pinMode(role_pin, INPUT);
  digitalWrite(role_pin,HIGH);
  delay(20); // Just to get a solid reading on the role pin

  // read the address pin, establish our role
  if ( digitalRead(role_pin) )
    role = Remote;
  else
    role = Box;



  Serial.begin(57600);
  printf_begin();

  radio.begin();                           // Setup and configure rf radio
  radio.setChannel(1);
  radio.setPALevel(RF24_PA_MAX);
  radio.setDataRate(RF24_1MBPS);
  radio.setAutoAck(1);                     // Ensure autoACK is enabled
  radio.setRetries(2,15);                   // Optionally, increase the delay between retries & # of retries
  radio.setCRCLength(RF24_CRC_8); 
  radio.openWritingPipe(pipes[0]);
  radio.openReadingPipe(1,pipes[1]);
  
  radio.startListening();                 // Start listening
  radio.printDetails();                   // Dump the configuration of the rf unit for debugging
  
  
  printf("\n\rAK Studio Relay Box /\n\r");
  /*
  randomSeed(analogRead(0));              //Seed for random number generation
  
  for(int i=0; i<32; i++){
     data[i] = random(255);               //Load the buffer with random data
  }
*/
   if ( role ==Rremote )
  {
    radio.openWritingPipe(pipe);
  }
  else
  {
    radio.openReadingPipe(1,pipe);
  }

  //
  // Start listening
  //

  if ( role == Box )
    radio.startListening();

  //
  // Dump the configuration of the rf unit for debugging
  //

  radio.printDetails();

  //
  // Set up buttons / LED's
  //
  
  // Set pull-up resistors for all buttons
  if ( role == Remote )
  {
    int i = num_button_pins; 
    while(i--)
    {
      pinMode(button_pins[i],INPUT);
      digitalWrite(button_pins[i],HIGH);
    }
  }

  // Turn LED's ON until we start getting keys
  if ( role == Box )
  {
    int i = num_led_pins;
    while(i--)
    {
      pinMode(led_pins[i],OUTPUT);
      data[i] = HIGH;
      digitalWrite(led_pins[i],data[i]);
    }
  }

  
  radio.powerUp();                        //Power up the radio
}

//------------------------LOOP--------------------------//

void loop(void){


  if(role == Remote){
    
    //delay(2000);
    
    //printf("Initiating Basic Data Transfer\n\r");
    
        // Get the current state of buttons, and
    // Test if the current state is different from the last state we sent
    int i = num_button_pins;
    bool different = false;
    while(i--)
    {
      uint8_t state = ! digitalRead(button_pins[i]);
      if ( state != button_states[i] )
      {
        different = true;
        data[i] = state;
      }
    }

    // Send the state of the buttons to the LED board
    if ( different )
    {
      randomSeed(analogRead(0));              //Seed for random number generation
      data[4] = random(255);
      printf("Now sending...");
      bool ok = radio.write( data, 5 );
      if (ok)
        printf("ok\n\r");
      else
        printf("failed\n\r");
    }

